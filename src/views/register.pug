extends base

block main 

    section.register
        .container 
            form.form.register__form(action="#", method="POST")
                h2.register__heading Join us now

                span.form__error
                .form__group 
                    input.form__input.register-name(type="text", placeholder="Name", required)

                .form__group 
                    input.form__input.register-email(type="email", placeholder="Email", required)

                .form__group 
                    input.form__input.register-password(type="password", placeholder="Password", required, minLength="8")

                button.btn.btn--primary.btn--full.register-btn(type="submit") Register
                
                p.register__other 
                    | Already have an account ? 
                    a.link--primary(href="/login") Login
